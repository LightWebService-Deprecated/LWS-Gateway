@model LWS_Gateway.Model.Response.AccountHeaderResponse

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <!-- Commonly Used CSS(Document-Wide) -->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Ubuntu+Mono" />
    <link rel="stylesheet" type="text/css" href="~/css/global.css" />
    <link rel="stylesheet" type="text/css" href="~/css/common_header.css" />
    <link rel="stylesheet" type="text/css" href="~/css/common_body.css" />

    <style>
        button {
            border: none;
            border-radius: 5px;
            margin: 0;
            padding: 8px 13px 8px 13px;
            font-family: 'Ubuntu Mono';
            font-size: 16px;
            background-color: rgb(220, 220, 233);
        }

        button:active {
            background-color: rgb(196, 196, 209);
        }

        label {
            display: block;
            margin: 7px 0 7px 0;
        }

        input {
            height: 30px;
            width: 100%;
            border: none;
            font-size: 16px;
            background-color: ghostwhite;
            border-bottom: 1px solid #BFBFBF;
        }

        .main_content {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        #edit_box {
            box-shadow: 0.5px 0.5px 5px 1px rgb(199, 199, 199);
            border-radius: 8px;
            width: 40%;
        }

        #button_area {
            display: flex;
            flex-direction: row;
            justify-content: space-evenly;
            margin-bottom: 10px;
        }

        #profile_input_area {
            display: flex;
            flex-direction: row;
            justify-content: space-evenly;
            align-items: center;
            margin-bottom: 10px;
        }

        /* Manage Area */
        #image_test {
            /* Basic Width/Height description */
            width: 64px;
            height: 64px;

            /* To Make it Circle, set to radius 50% */
            border-radius: 50%;
            background-color: cyan;

            /* Basic Font Declaration */
            font-family: "Ubuntu Mono";
            font-size: 32px;

            /* Make sure height does match with height. */
            line-height: 64px;
            text-align: center;
        }
    </style>
</head>

<body>
    <!-- Header Area -->
    <div class="header">

        <!-- Header Name -->
        <a href="/" class="header_name">Lightweight Web Service</a>

        <!-- Management Info(My Info) -->
        <div class="manage_area">
            <a href="/account/info">
                <div id="manage_identifier">@Model.FirstLetter</div>
                <div class="name_role">
                    <div id="role_name">@Model.NickName</div>
                    <div id="role_admin">@Model.Role</div>
                </div>
            </a>
        </div>

    </div>

    <!-- Body Area -->
    <div class="body">

        <!-- Left Sidebar Area -->
        <div class="left_sidebar">
            <ul class="sidebar_list">
                <li>Overall</li>
            </ul>
        </div>

        <!-- Content -->
        <div class="main_content">

            <div id="edit_box">
                <!-- Header -->
                <h3 style="margin-left: 10px;">Edit User Information</h3>

                <!-- Profile, Inputs -->
                <div id="profile_input_area">
                    <div id="image_test">@Model.FirstLetter</div>
                    <div id="input_area" style="width: 60%;">
                        <label>Edit Email</label>
                        <input type="email" placeholder="email address" style="width: 100%">

                        <label>Edit NickName</label>
                        <input type="text" placeholder="nickname" style="width: 100%;">
                    </div>
                </div>

                <!-- Button Area -->
                <div id="button_area">
                    <button>Save</button>
                    <button>Sign Out</button>
                    <button>Dropout</button>
                </div>
            </div>

        </div>

    </div>
</body>

</html>