@model LWS_Gateway.Model.Response.AccountHeaderResponse

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <!-- Commonly Used CSS(Document-Wide) -->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Ubuntu+Mono" />
    <link rel="stylesheet" type="text/css" href="~/css/global.css" />
    <link rel="stylesheet" type="text/css" href="~/css/common_header.css" />
    <link rel="stylesheet" type="text/css" href="~/css/common_body.css" />
</head>

<body>
<!-- Header Area -->
<div class="header">

    <!-- Header Name -->
    <a href="/" class="header_name">Lightweight Web Service(Admin)</a>

    <!-- Management Info(My Info) -->
    <div class="manage_area">
        <a href="/account/@Model.Id">
            <div id="manage_identifier">@Model.FirstLetter</div>
            <div class="name_role">
                <div id="role_name">@Model.Email</div>
                <div id="role_admin">@Model.Role</div>
            </div>
        </a>
    </div>

</div>

<!-- Body Area -->
<div class="body">

    <!-- Left Sidebar Area -->
    <div class="left_sidebar">
        <ul class="sidebar_list">
            <li>Overall</li>
        </ul>
    </div>

    <!-- Content -->
    <div class="main_content">
    </div>

</div>
</body>

<footer>
</footer>
</html>